<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tour_guide_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bucharest_Tour_Guide"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopAttractionsActivity"
            android:label="@string/category_top_attractions" />
        <activity
            android:name=".ArchitecturalBuildingsActivity"
            android:label="@string/category_architectural_buildings" />
        <activity
            android:name=".MuseumsActivity"
            android:label="@string/category_museums" />
        <activity
            android:name=".LandmarksActivity"
            android:label="@string/category_landmarks" />
    </application>

</manifest>